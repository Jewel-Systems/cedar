doctype html
html(lang="en")
  head
    include html/head/head_default_init.pug

    link(rel="stylesheet", type="text/css", href="/cedar/css/home.css")
    link(rel="stylesheet", type="text/css", href="/cedar/css/login.css")

    include html/head/head_qrcode_js.pug
    script(type="text/javascript", src="/cedar/js/user/login.js")
  body
    .container-fluid
      .row
        include html/body/default_body_and_nav.pug

      .row
        .col-md-offset-1.col-md-10
          .content
            img(src="/cedar/images/balls.gif", alt="loading").img-responsive.loading
            p.greeting Hello
            .panel.panel-default
              .panel-heading
                h3.panel-title.text-center Login
              .panel-body
                .row
                  .col-md-6
                    p Present your QR code
                    img(src="http://placehold.it/350x300", alt="placeholder").img-responsive
                  .col-md-6
                    .loginmodal-container
                      h1 Login to Your Account
                      br
                      form(method="post", action="/cedar/user").loginForm
                        input(type="text", name="email", placeholder="Email", required)
                        input(type="password", name="pass", placeholder="Password", required)
                        input(type="submit", value="Login").login.loginmodal-submit
          include html/body/default_body_and_footer.pug
